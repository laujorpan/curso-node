extends layout

block content
  .col-sm-12.col-md-6.offset-md-3
    .material-card
      if error
        .alert.alert-danger(role='alert') error
    
      if logout
        .alert.alert-success(role='alert') Logout completed!
    
      form.form-signin.text-center(method='post', action='login')
        img.mb-4(src='https://getbootstrap.com/assets/brand/bootstrap-solid.svg', alt='', width='72', height='72')
        h1.h3.mb-3.font-weight-normal Please sign in
        label.sr-only(for='inputName') User name
        input#inputName.form-control(type='text', name='name', placeholder='Username', required='required', autofocus='autofocus')
        .checkbox.mb-3.text-left
          label
            input(type='checkbox', name='remember', value='true')
            |  Remember me
        button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
